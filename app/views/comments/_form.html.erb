  <%= simple_form_for([post, comment],
    data: {
      insert_in_list_target: "form",
      action: "submit->insert-in-list#send"
      }) do |f| %>
    <%= f.input :content, :placeholder => 'Add a comment...' %>
    <button name="button" type="submit" class="btn btn-flat">
      Send
    </button>
  <% end %>
