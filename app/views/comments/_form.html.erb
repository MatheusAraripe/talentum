<%= simple_form_for([post, comment],
  data: {
    insert_in_list_target: "form",
    action: "submit->insert-in-list#send"
    }) do |f| %>
  <div class="search-form-control form-group">
    <%= f.input :content, label: false, :placeholder => 'Add a comment...' %>
    <button name="button" type="submit" class="btn btn-flat"> Comment </button>
  </div>
<% end %>
